<%= form_with model: @team do |form| %>
  <div class="form-group">
    <%= form.label :team_name %>
    <%= form.text_field :team_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :team_role %>
    <%= form.select :team_role, options_for_select(Team::ROLES), {}%>
  </div>

  <div class="form-group">
    <%= form.label :first_name%>
    <%= form.select :first_name, User.all.collect {|p| [ p.first_name, p.id ] } %>

  </div>

  <div>
    <%= form.submit 'Create team', class: 'btn btn-outline-primary' %>
    <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>