<h1><%= @team.team_name %></h1>
<br>
<%= form_with model: @team do |form| %>

  <div class="form-group">
    <%= form.label :team_role %>
    <%= form.select :team_role, options_for_select(Team::ROLES)%>
  </div>

  <div class="form-group">
    <%= form.label :first_name%>
    <%= form.select :first_name, options_for_select(User.all.collect {|p| [ p.last_name, p.id ] }, @team.team_members.users_id) %>
  </div>

  <div>
    <%= form.submit 'Add Member', class: 'btn btn-outline-primary' %>
    <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
