<%= form_with model: [ @idea, @idea.comments.build ] do |form| %>
  <div class="form-group">
    <%= form.label :comment %><br>
    <%= form.text_area :comment, class: "form-control" %>
    <%= form.hidden_field(:commentable_type, :value => 'Idea' )%>
    <%= form.hidden_field(:commentable_id, :value => @idea.id) %>
  </div>

  <div>
    <%= form.submit 'Create comment', class: 'btn btn-outline-primary' %>
  </div>
<% end %>
