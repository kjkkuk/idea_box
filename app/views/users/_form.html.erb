<%= form_with model: user do |form| %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control", disabled: user.id != current_user.id %>
    <%= render 'users/error', user: user, field: :first_name %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control", disabled: user.id != current_user.id %>
    <%= render 'users/error', user: user, field: :last_name %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", disabled: user.id != current_user.id %>
    <%= render 'users/error', user: user, field: :email %>
  </div>

  <%= form.check_box :sponsor, {class: 'visible-checkbox'}%>
  <%= form.label "Sponsor", for:"visible-checkbox", class: "visible-checkbox" %>

  <div class="form-group">
    <%= form.label "Location" %>
    <%= form.select :geo, options_for_select(Idea::GEO)%>
  </div>

  <div class="form-group">
    <%= form.label :industry %>
    <%= form.select :industry, options_for_select(Idea::INDUSTRY)%>
  </div>

  <div class="form-group">
    <%= form.label :opportunity %>
    <%= form.select :opportunity, options_for_select(Idea::NEED)%>
  </div>

  <div>
    <%= form.submit 'Update profile', class: 'btn btn-outline-primary' %>
    <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
  </div>


<% end %>
