<%= form_with model: user do |form| %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control", disabled: user.id != current_user.id %>
    <%= render 'users/error', user: user, field: :first_name %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control", disabled: user.id != current_user.id %>
    <%= render 'users/error', user: user, field: :last_name %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", disabled: user.id != current_user.id %>
    <%= render 'users/error', user: user, field: :email %>
  </div>

    <%= form.check_box :sponsor_profile_exist,  {class: 'visible-checkbox'}, true, false %>
    <%= form.label "Sponsor", for:"visible-checkbox", class: "visible-checkbox" %>

  <%= form.fields_for :sponsor do |ff| %>

    <div class="form-group-1">
      <%= ff.label "Location" %>
      <%= ff.select :geo, options_for_select(Idea::GEO, user.sponsor.geo), { :class => 'select-form-user' }%>
    </div>

    <div class="form-group-1">
      <%= ff.label :industry %>
      <%= ff.select :industry, options_for_select(Idea::INDUSTRY, user.sponsor.industry)%>
    </div>

    <div class="form-group-1">
      <%= ff.label :opportunity %>
      <%= ff.select :opportunity, options_for_select(Idea::NEED, user.sponsor.opportunity)%>
    </div>

  <% end %>



  <div>
    <%= form.submit 'Update profile', class: 'btn btn-outline-primary' %>
    <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
  </div>

<% end %>
